{% extends "mysite:site/templates/base.jinja2" %}
{% block title %}View{% endblock %}
{% block content %}

    <h1>View</h1>
    <p>Id: {{ context.id }}</p>
    <p>{{ context.title }}</p>

    <ul>
        {% for todo in context.todos %}
            <li>
                <a href="{{ request.route_url('todo_view', id=todo.id) }}">
                    {{ todo.title }}
                </a>
            </li>
    {% endfor %}
    </ul>

{% endblock %}
