{% extends "mysite:site/templates/base.jinja2" %}
{% block title %}View{% endblock %}
{% block content %}

    <h1>View</h1>
    <p>Id: {{ context.id }}</p>
    <p>{{ context.name }}</p>
    <p>
        Owner:
        {% if request.has_permission('view', context.owner) %}
            <a href="{{ request.route_url('user_view', username=context.owner.username) }}">
                {{ context.owner.username }}
            </a>
        {% else %}
            {{ context.owner.username }}
        {% endif %}
    </p>

{% endblock %}
