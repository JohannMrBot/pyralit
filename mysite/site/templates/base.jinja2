<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} - MySite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="{{ request.static_url('mysite:static/mysite.css') }}">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
<nav class="navbar p-3 bg-primary navbar-light">
    <div class="navbar-header">
        <a class="navbar-brand" href="{{ request.route_url('home') }}">Home</a>
        <a class="navbar-brand" href="{{ request.route_url('todo') }}">ToDos</a>
        <a class="navbar-brand" href="{{ request.route_url('user') }}">Users</a>
        <a class="navbar-brand" href="{{ request.route_url('greeting') }}">Greeting</a>
        <a class="navbar-brand" href="{{ request.route_url('hobby') }}">Hobby</a>
    </div>
    <ul class="nav navbar-nav navbar-right d-flex flex-row align-items-center gap-3">
        {% if request.authenticated_userid %}
            <li class="navbar-text text-dark">
                {{ request.authenticated_userid }}
            </li>
            <li class="navbar-text text-dark"><a href="{{ request.route_url('logout') }}">Logout</a></li>
        {% else %}
            <li class="navbar-text text-dark"><a href="{{ request.route_url('login') }}">Login</a></li>
        {% endif %}
    </ul>
</nav>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<div id="content" class="container">
    {% if view.messages %}
        {% for message in view.messages %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
    {% endif %}
    {% block content %}{% endblock %}
</div>

</body>
</html>